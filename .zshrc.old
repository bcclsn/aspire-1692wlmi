#echo "$fg[cyan] Kernel:    $reset_color $(uname -r)"  
echo "$fg[cyan] HDD:       $reset_color $(df -h | grep "/dev/sda1" | cut -c 23- | cut -c-4)/$(df -h | grep "/dev/sda1" | cut -c 18- | cut -c-3)"              
